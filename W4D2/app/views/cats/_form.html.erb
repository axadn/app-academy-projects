
<% prefix = (cat.persisted? ? cat_url(cat) : cats_url) %>
<form action=<%=prefix  %> method="post">
  <% unless cat.id %>
    <input type="hidden" name='_method' value="PATCH">
  <% end%>
  <input type="text" name="cat[name]" value=<%= cat.name %> >
  <label for="m"> Male</label>
  <input id="m" type="radio" name="cat[sex]" value = "M" <%= cat.sex=='M' ? 'checked="checked"' : "" %>>
  <label for="f"> Female</label>
  <input id="f" type="radio" name="cat[sex]" value="F" <%= cat.sex=='F' ? 'checked="checked"' : "" %>>
  <select name ="cat[color]">
    <option disabled <%= cat.color ? "" : "selected"%>>"Select a color"</option>
    <%Cat::COLORS.each do |color|  %>
      <option <%= cat.color == color ? "selected" : '' %> value= <%=color  %>>
        <%=color  %>
      </option>
    <% end %>
  </select>
  <input id='date' type='date' name='cat[birth_date]' value=<%= cat.birth_date %> >
  <textarea name='cat[description]'>
    <%=  cat.description%>
  </textarea>
  <input type="submit">
</form>
